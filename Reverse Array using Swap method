#include <iostream>
using namespace std;
void reverseArray(int arr[], int size) {
    int start = 0;
    int end = size - 1;

    while (start < end) {
        int temp = arr[start];
        arr[start] = arr[end];
        arr[end] = temp;

        start++;
        end--;
    }
}
int main() {
    int arr[] = {3, 2, 4, 1, 4, 6};
    int size = sizeof(arr) / sizeof(arr[0]);

    cout <<endl<< "Original Array ";
    for (int i = 0; i < size; i++)
        cout << arr[i] << " ";

    reverseArray(arr, size);

    cout <<endl<< "Reversed Array ";
    for (int i = 0; i < size; i++)
        cout << arr[i] << " ";

    return 0;
}
